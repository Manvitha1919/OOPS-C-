class Employee:
    total_salary = 0

    def __init__(self, id, name, salary):
        self.__id = id
        self.__name = name
        self.__salary = salary
        Employee.total_salary += salary

    @staticmethod
    def get_total_salary():
        return Employee.total_salary

    def get_id(self):
        return self.__id

    def set_id(self, id):
        self.__id = id

    def get_name(self):
        return self.__name

    def set_name(self, name):
        self.__name = name

    def get_salary(self):
        return self.__salary

    def set_salary(self, salary):
        Employee.total_salary -= self.__salary
        self.__salary = salary
        Employee.total_salary += salary


# Example usage:
emp1 = Employee(1, "John", 50000)
emp2 = Employee(2, "Jane", 60000)
emp3 = Employee(3, "Doe", 70000)

print("Total salary of all employees:", Employee.get_total_salary())
print("Salary of emp1:", emp1.get_salary())

emp1.set_salary(55000)
print("New salary of emp1:", emp1.get_salary())
print("Updated total salary of all employees:", Employee.get_total_salary())
