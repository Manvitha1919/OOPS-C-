#include <iostream>
using namespace std;
int fibonacci(int n) {
    if (n <= 1)
        return n;
    return fibonacci(n - 1) + fibonacci(n - 2);
}
void displayFibonacciSequence(int n) {
    cout << "Fibonacci sequence up to " << n << ":" << endl;
    for (int i = 0; i < n; ++i) {
        cout << fibonacci(i) << " ";
    }
    cout << endl;
}
int main() {
    int n;
    cout << "Enter the number 'n' to calculate Fibonacci sequence up to: ";
    cin >> n;
    displayFibonacciSequence(n);

    return 0;
}

